<% include ../partials/header %>

<div class="ui main text container segment">
        <div style="text-align: center" class="ui huge header">Add New Comment to <%= blog.title %></div>
        <div class="row">
            <div style="width: 70%; margin: 25px auto;">
                <form action="/blogs/<%= blog._id %>/comments" method="POST" class="ui form">
                    <div class="field">
                        <textarea rows="5" type="text" name="comment[text]" placeholder="text"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/blogs">Go Back</a>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>


